@page "/login"
@inherits LoginBase
<h3>Login</h3>
<EditForm Model="UserModel" OnValidSubmit="HanleLoginSubmit">
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <InputText id="email" type="email" class="form-control" placeholder="Email"
                       @bind-Value="UserModel.Email" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <InputText id="password" type="password" class="form-control" placeholder="Password"
                       @bind-Value="UserModel.Password" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
</EditForm>

